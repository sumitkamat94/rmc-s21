<?xml version="1.0"?>

<robot name="ThreeLinkBlock">

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0.05" ixz="0.05" iyy="1" iyz="0.05" izz="1" />
    </inertial>
  </link>
  <link name="block">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <geometry>
         <box size="2 2 2" />
      </geometry>
      <material name="green">
         <color rgba="0.5 0 0.5 1" />
      </material>
    </visual>
  </link>

  <joint name="block_float_joint" type="floating">
    <parent link="base_link" />
    <child link="block" />
    <origin xyz="0 0.0 0.0" />
    <axis xyz="0 0 1" />
    <dynamics damping="0.1" />
  </joint>

  <link name="base_platform">
    <inertial>
      <origin xyz="0 0 0.2" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 .2" rpy="0 0 0" />
      <geometry>
         <cylinder length="0.4" radius="0.2" />
      </geometry>
      <material name="purple">
	       <color rgba="1 0 1 1" />
      </material>
    </visual>
  </link>

  <joint name="trunk" type="continuous">
    <parent link="base_link" />
    <child link="base_platform" />
    <origin xyz="0 0 0.0" />
    <axis xyz="0 0 1" />
    <dynamics damping="0.1" />
  </joint>


  <link name="lower_link">
    <inertial>
      <origin xyz="0 0 .5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 .5" rpy="0 0 0" />
      <geometry>
         <cylinder length="1.1" radius=".05" />
      </geometry>
      <material name="red">
	       <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>

  <joint name="shoulder" type="continuous">
    <parent link="base_platform" />
    <child link="lower_link" />
    <origin xyz="0 0 0.4" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <link name="upper_link">
    <inertial>
      <origin xyz="0 0.1 0.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0.1 0.5" rpy="0 0 0" />
      <geometry>
         <cylinder length="1.1" radius=".05" />
      </geometry>
      <material name="blue">
	       <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>



  <joint name="elbow" type="continuous">
    <parent link="lower_link" />
    <child link="upper_link" />
    <origin xyz="0 0 1.0" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

</robot>
